<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/graylight"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/acceptUserimage"
        android:textColor="@color/back"
        android:layout_marginLeft="10dp"
        android:text="name"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/acceptUserimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"/>

</RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Pickup:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/back"
                android:gravity="center"
                android:layout_weight=".2"
                />
            <TextView
                android:id="@+id/pickuplocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Pickup:"
                android:textColor="@color/back"
                android:gravity="left|center"
                android:singleLine="true"
                android:layout_weight=".8"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/top"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:text="Dropof:"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/back"
                android:gravity="center"
                />


            <TextView
                android:id="@+id/dropoflocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="Pickup:"
                android:textColor="@color/back"
                android:singleLine="true"
                android:gravity="left|center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"

                android:layout_marginLeft="@dimen/sides"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/sides"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:elevation="@dimen/toolbar_top">

                <TextView
                    android:id="@+id/accept"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="@string/accept"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"

                android:layout_marginLeft="@dimen/sides"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/sides"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="@color/back"
                android:elevation="@dimen/toolbar_top"
                app:cardBackgroundColor="@color/back">

                <TextView
                    android:id="@+id/decline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="@string/decline"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>