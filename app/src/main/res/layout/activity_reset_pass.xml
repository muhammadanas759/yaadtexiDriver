<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Activities.ChangePassword"
    >
    <EditText
        android:id="@+id/resetpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="new password"
        android:layout_marginTop="30dp"
        android:textColorHint="@color/graydark"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/resetagainpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="retype password"
        android:textColorHint="@color/graydark"
        android:layout_below="@id/resetpassword"
        android:textSize="25dp" />

    <Button
        android:id="@+id/resetpasswordbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetagainpassword"
        android:text="Reset Now"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>