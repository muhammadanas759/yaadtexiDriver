<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="320dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/top"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/graylight"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/back"
            android:text="name"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Pickup:"
                android:textColor="@color/back"
                android:gravity="right|center"
                android:layout_weight=".3"
                />
            <TextView
                android:id="@+id/pickuplocation"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Pickup:"
                android:textColor="@color/back"
                android:gravity="left|center"
                android:layout_weight=".7"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/top"
            android:weightSum="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Pickup:"
                android:textColor="@color/back"
                android:gravity="right|center"
                android:layout_weight=".3"
                />
            <TextView
                android:id="@+id/dropoflocation"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Pickup:"
                android:textColor="@color/back"
                android:gravity="left|center"
                android:layout_weight=".7"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"

                android:layout_marginLeft="@dimen/sides"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/sides"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:elevation="@dimen/toolbar_top">

                <TextView
                    android:id="@+id/accept"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="@string/accept"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"

                android:layout_marginLeft="@dimen/sides"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/sides"
                android:layout_marginBottom="10dp"
                android:layout_weight=".5"
                android:background="@color/back"
                android:elevation="@dimen/toolbar_top"
                app:cardBackgroundColor="@color/back">

                <TextView
                    android:id="@+id/decline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_background"
                    android:gravity="center"
                    android:text="@string/decline"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>